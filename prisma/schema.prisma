generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique @db.VarChar(255)
  name      String?  @db.VarChar(255)
  role      String   @default("USER") @db.VarChar(50)
  createdAt DateTime @default(now())

  @@index([email])
}

model Blog {
  id        String   @id @default(cuid())
  title     String   @db.VarChar(255)
  slug      String   @unique @db.VarChar(255)
  content   String   @db.LongText
  metaDesc  String?  @db.VarChar(500)
  keywords  String?  @db.VarChar(500)
  excerpt   String?  @db.Text
  imageUrl  String?  @db.VarChar(500)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([published])
  @@index([createdAt])
}

model Achievement {
  id        String   @id @default(cuid())
  type      String   @db.VarChar(50)
  title     String   @db.VarChar(255)
  content   String?  @db.Text
  mediaUrl  String?  @db.VarChar(500)
  embedCode String?  @db.Text
  metrics   String?  @db.Text
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model AdminUser {
  id           String    @id @default(cuid())
  username     String    @unique @db.VarChar(100)
  passwordHash String    @db.VarChar(255)
  createdAt    DateTime  @default(now())
  lastLogin    DateTime?

  @@index([username])
}

model AdminSession {
  id        String   @id @default(cuid())
  token     String   @unique @db.VarChar(255)
  adminId   String   @db.VarChar(255)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([adminId])
  @@index([expiresAt])
}

model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique @db.VarChar(100)
  value       String   @db.LongText
  category    String   @default("general") @db.VarChar(50)
  label       String?  @db.VarChar(255)
  description String?  @db.Text
  updatedAt   DateTime @updatedAt

  @@index([key])
  @@index([category])
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String   @db.VarChar(255)
  bio         String?  @db.Text
  details     String?  @db.LongText
  imageUrl    String?  @db.VarChar(500)
  portraitUrl String?  @db.VarChar(500)
  email       String?  @db.VarChar(255)
  linkedin    String?  @db.VarChar(500)
  twitter     String?  @db.VarChar(500)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
}

// ============================================
// PHASE 2: Dynamic Content Models
// ============================================

model HeroContent {
  id           String   @id @default(cuid())
  headline     String   @db.VarChar(500)
  subtext      String   @db.Text
  badge        String?  @db.VarChar(200)
  ctaPrimary   String?  @db.VarChar(100)
  ctaSecondary String?  @db.VarChar(100)
  isActive     Boolean  @default(true)
  updatedAt    DateTime @updatedAt
}

model Statistic {
  id        String   @id @default(cuid())
  label     String   @db.VarChar(100)
  value     Int
  prefix    String   @default("") @db.VarChar(20)
  suffix    String   @default("+") @db.VarChar(20)
  icon      String?  @db.VarChar(50)
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  updatedAt DateTime @updatedAt

  @@index([order])
}

model Feature {
  id          String   @id @default(cuid())
  title       String   @db.VarChar(200)
  description String   @db.Text
  icon        String   @db.VarChar(50)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  @@index([order])
}

model HowItWorksStep {
  id          String   @id @default(cuid())
  step        Int
  title       String   @db.VarChar(200)
  description String   @db.Text
  icon        String   @db.VarChar(50)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  @@index([order])
}

model Testimonial {
  id        String   @id @default(cuid())
  quote     String   @db.Text
  author    String   @db.VarChar(200)
  role      String?  @db.VarChar(100)
  location  String?  @db.VarChar(200)
  avatarUrl String?  @db.VarChar(500)
  rating    Int      @default(5)
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
  @@index([isActive])
}

model AboutContent {
  id        String   @id @default(cuid())
  key       String   @unique @db.VarChar(50)
  title     String?  @db.VarChar(200)
  content   String   @db.LongText
  order     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@index([key])
}

model AppStoreLink {
  id        String   @id @default(cuid())
  platform  String   @unique @db.VarChar(20)
  url       String   @db.VarChar(500)
  isLive    Boolean  @default(false)
  qrCodeUrl String?  @db.VarChar(500)
  updatedAt DateTime @updatedAt
}

model ContactInfo {
  id        String   @id @default(cuid())
  key       String   @unique @db.VarChar(50)
  value     String   @db.Text
  label     String?  @db.VarChar(100)
  updatedAt DateTime @updatedAt

  @@index([key])
}

model SocialLink {
  id        String   @id @default(cuid())
  platform  String   @unique @db.VarChar(50)
  url       String   @db.VarChar(500)
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@index([platform])
}

// ============================================
// PHASE 3: Additional Admin Features
// ============================================

model FAQ {
  id        String   @id @default(cuid())
  question  String   @db.VarChar(500)
  answer    String   @db.Text
  category  String   @default("general") @db.VarChar(50)
  visible   Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@index([visible])
}

model InstagramReel {
  id          String   @id @default(cuid())
  reelId      String   @db.VarChar(100)
  title       String   @db.VarChar(255)
  description String?  @db.Text
  visible     Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([visible])
}

model NavigationItem {
  id        String   @id @default(cuid())
  label     String   @db.VarChar(100)
  href      String   @db.VarChar(255)
  icon      String?  @db.VarChar(50)
  location  String   @default("header") @db.VarChar(20) // header, footer
  section   String?  @db.VarChar(50) // for footer: company, product, legal
  visible   Boolean  @default(true)
  external  Boolean  @default(false)
  order     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@index([location])
  @@index([order])
}

model MediaFile {
  id         String   @id @default(cuid())
  filename   String   @db.VarChar(255)
  url        String   @db.VarChar(500)
  category   String   @default("general") @db.VarChar(50)
  mimeType   String   @db.VarChar(100)
  size       Int      @default(0)
  alt        String?  @db.VarChar(255)
  uploadedAt DateTime @default(now())

  @@index([category])
  @@index([uploadedAt])
}
